<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lsr.wordtest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".activity.WordDeleteActivity"></activity>
        <activity android:name=".activity.TestCompleteActivity" />
        <activity android:name=".activity.WordTestActivity" />
        <activity android:name=".activity.WordTestActivityKor" />
        <activity
            android:name=".activity.WordDetailActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>